USE c_cs108_chishuen;

DROP TABLE IF EXIST quiz_summary;

CREATE TABLE quiz_summary (
	quizID CHAR(32),
	quizName CHAR(32),
	creator CHAR(32),
	quizDescription BLOB,
	category CHAR(32),
	tag CHAR(255),
	practiceMode BOOLEAN,
	randomOrder BOOLEAN,
	isSinglePage BOOLEAN,
	isCorrection BOOLEAN,
	createTime TIMESTAMP,
	questionType BLOB,
	questionID BLOB,
	numOfTaken INT,
	timesOfRating INT,
	avgRating FLOAT,
	totalPoints FLOAT,
	avgPoints FLOAT
);

DROP TABLE IF EXIST quiz_rating;

CREATE TABLE quiz_rating (
	quizID CHAR(32)
	username CHAR(32)
	rating INT
	review BLOB
);

DROP TABLE IF EXIST quiz_history;

CREATE TABLE quiz_history (
	quizID CHAR(32),
	username CHAR(32),
	submitTime TIMESTAMP,
	timeUsed BIGINT,
	score INT
);

DROP TABLE IF EXIST question_response;
CREATE TABLE question_respons(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
);

DROP TABLE IF EXIST fill_in_blank;
CREATE TABLE fill_in_blank(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
);

DROP TABLE IF EXIST multiple_choice;
CREATE TABLE multiple_choice(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
	choice BLOB
);

DROP TABLE IF EXIST picture_response;
CREATE TABLE picture_response(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
	imageURL BLOB
);

DROP TABLE IF EXIST multi_answer;
CREATE TABLE multi_answer(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
	numOfAns INT,
	isOrder BOOLEAN
);

DROP TABLE IF EXIST multi_choice_multi_answer;
CREATE TABLE multi_choice_multi_anwser(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	anwser BLOB,
	score INT
	choice BLOB
);

DROP TABLE IF EXIST matching;
CREATE TABLE matching(
	questionID CHAR(32),
	quizID CHAR(32),
	timeLimit INT,
	question BLOB,
	options BLOB,
	choices BLOB
	score INT,
	numOfOptions INT
);

